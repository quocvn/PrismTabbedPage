<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    x:Class="PrismTabbedPage.Views.Tabbar.TabAccount"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <StackLayout
        Padding="20"
        HorizontalOptions="Fill"
        VerticalOptions="CenterAndExpand">
        <Label
            FontSize="20"
            HorizontalTextAlignment="Center"
            Text="Welcome to Xamarin Forms and Prism!" />
        <Label
            Margin="0,10,0,10"
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"
            Text="Here to explore Advanced Tab Navigation with MVVM friendly and Testable disciplines!" />
        <Button
            BackgroundColor="#2196F3"
            Command="{Binding GoToUserListPageCommand}"
            Text="Go to User List Page"
            TextColor="White" />
    </StackLayout>

</ContentPage>